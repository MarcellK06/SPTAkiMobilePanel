<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CleanProject.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Entry x:Name="address" Placeholder="Server Address"/>
            <Entry x:Name="username" Placeholder="Username"/>
            <Entry x:Name="password" Placeholder="Password" IsPassword="True"/>
            <Button
                x:Name="LoginBtn"
                Text="Login" 
                SemanticProperties.Hint="Log in to SITAKI server"
                Clicked="onLoginPressed"
                HorizontalOptions="Fill" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
